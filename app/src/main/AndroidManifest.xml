<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.javaqa">

    <application
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/CustomAppTheme"
        android:fullBackupContent="@xml/backup_descriptor"
        android:allowBackup="true">

        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activities.SingInActivity"
            android:parentActivityName=".activities.StartActivity"/>

        <activity android:name=".activities.RegistrationActivity"
            android:parentActivityName=".activities.StartActivity"/>

        <activity android:name=".activities.StartActivity"/>

        <activity android:name=".activities.NewGameActivity"
            android:parentActivityName=".activities.MainActivity"/>

        <activity android:name=".activities.ProfileActivity"
            android:parentActivityName=".activities.MainActivity"/>

        <activity android:name=".activities.java_core.IntroductionActivity"
            android:parentActivityName=".activities.MainActivity"/>

        <activity android:name=".activities.profile_activities.ProfileEditActivity"
            android:parentActivityName=".activities.ProfileActivity">
        </activity>

        <activity android:name=".activities.profile_activities.CreatePostActivity"
            android:windowSoftInputMode="adjustResize"/>

        <activity android:name=".activities.CreateConversationPostActivity" />

        <activity android:name=".activities.OpenConversationItem"/>

    </application>

</manifest>