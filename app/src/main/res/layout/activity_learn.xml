                        android:id="@+id/introduction"
                        android:background="@drawable/item_file"
                        android:layout_marginStart="10dp"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:src="@drawable/start_48px"
                            android:scaleType="centerInside"
                            android:background="@drawable/learning_item_level_style"
                            android:id="@+id/introduction_to_java"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/introduction_to_java"
                            android:text="Introduction"
                            android:layout_centerHorizontal="true"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/item_file"
                        android:id="@+id/download"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:id="@+id/picture2"
                            android:scaleType="centerInside"
                            android:background="@drawable/learning_item_level_style"
                            android:src="@drawable/idea_48px"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/picture2"
                            android:text="Download IDEA"
                            android:layout_centerHorizontal="true"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:id="@+id/basicsyntax"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/item_file"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:id="@+id/picture3"
                            android:scaleType="centerInside"
                            android:background="@drawable/learning_item_level_style"
                            android:src="@drawable/a32bit_48px"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/picture3"
                            android:text="Basic Syntax"
                            android:layout_centerHorizontal="true"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:id="@+id/type_of_data"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/item_file"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:id="@+id/picture4"
                            android:scaleType="centerInside"
                            android:background="@drawable/learning_item_level_style"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/picture4"
                            android:text="Data types"
                            android:layout_centerHorizontal="true"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:id="@+id/types_of_variables"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/item_file"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:id="@+id/picture5"
                            android:scaleType="centerInside"
                            android:background="@drawable/learning_item_level_style"
                            android:src="@drawable/heat_map_48px"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/picture5"
                            android:text="Types of variables"
