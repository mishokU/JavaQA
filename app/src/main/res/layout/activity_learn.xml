                />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/build_tools_block">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:id="@+id/build_tools_linear_layout"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:id="@+id/gradle_block"
                        android:layout_marginStart="10dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:background="@drawable/item_file"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:id="@+id/picture9"
                            android:scaleType="centerInside"
                            android:background="@drawable/learning_item_level_style"
                            android:src="@drawable/gradle_icon"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/picture9"
                            android:text="Gradle"
                            android:layout_centerHorizontal="true"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:id="@+id/maven_block"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:background="@drawable/item_file"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:id="@+id/picture13"
                            android:scaleType="centerInside"
