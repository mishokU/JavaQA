                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:background="@drawable/item_file"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:id="@+id/picture6"
                            android:scaleType="centerInside"
                            android:background="@drawable/learning_item_level_style"
                            android:src="@drawable/metamorphose_48px"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/picture6"
                            android:text="Modifiers"
                            android:layout_centerHorizontal="true"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:id="@+id/classes_block"
                        android:layout_marginStart="10dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:background="@drawable/item_file"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:id="@+id/picture7"
                            android:scaleType="centerInside"
                            android:background="@drawable/learning_item_level_style"
                            android:src="@drawable/flow_chart_48px"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/picture7"
                            android:text="Classes"
                            android:layout_centerHorizontal="true"/>

                    </RelativeLayout>

                </LinearLayout>

            </HorizontalScrollView>

        </RelativeLayout>

        <RelativeLayout
