                            android:layout_centerVertical="true"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/picture8"
                            android:text="Git"
                            android:layout_centerHorizontal="true"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:id="@+id/docker_block"
                        android:background="@drawable/item_file"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:id="@+id/picture10"
                            android:scaleType="centerInside"
                            android:background="@drawable/learning_item_level_style"
                            android:src="@drawable/docker_icon"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/picture10"
                            android:text="Docker"
                            android:layout_centerHorizontal="true"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:id="@+id/subversion_block"

                        android:background="@drawable/item_file"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:id="@+id/picture11"
                            android:scaleType="centerInside"
                            android:background="@drawable/learning_item_level_style"
                            android:src="@drawable/subversion_logo"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/picture11"
                            android:text="Subversion"
                            android:layout_centerHorizontal="true"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:id="@+id/jenkins_block"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:background="@drawable/item_file"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:id="@+id/picture12"
                            android:scaleType="centerInside"
                            android:background="@drawable/learning_item_level_style"
