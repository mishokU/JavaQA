<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:background="@drawable/category_item_style"
    android:layout_height="32dp"
    android:layout_marginBottom="3dp">

    <TextView
        android:id="@+id/name_of_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_centerVertical="true"
        android:textSize="18sp"
        android:text="1 - Java Core"/>

    <ProgressBar
        android:id="@+id/profile_category_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_toEndOf="@+id/name_of_item"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_centerVertical="true"
        android:background="@drawable/categoty_item_progress_bar_style"
        android:max="100"/>

</RelativeLayout>